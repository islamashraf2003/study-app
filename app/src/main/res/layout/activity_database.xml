<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatabaseActivity"
    android:background="@color/back">

    <TextView
        android:id="@+id/textView"
        android:layout_width="327dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Database Quiz"
        android:textColor="#CA0346"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="351dp"
        android:layout_height="57dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="Q1-MySQL cursor is  non-scrollable and sensitive."
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <RadioGroup
        android:id="@+id/radiogroup1"
        android:layout_width="393dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RadioButton
            android:id="@+id/read"
            android:layout_width="156dp"
            android:layout_height="58dp"
            android:text="read-only and sensitive" />

        <RadioButton
            android:id="@+id/non"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="non-scrollable" />

        <RadioButton
            android:id="@+id/all"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text="All" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="370dp"
        android:layout_height="53dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="Q2-If Want To Get All People Live In \n  Maadi So You Write It As"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radiogroup1" />

    <RadioGroup
        android:id="@+id/radiogroup2"
        android:layout_width="391dp"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <RadioButton
            android:id="@+id/maadi"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="%Maddi%" />

        <RadioButton
            android:id="@+id/ma"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:text="Maadi" />

        <RadioButton
            android:id="@+id/nonof"
            android:layout_width="135dp"
            android:layout_height="48dp"
            android:text="Non Of Them" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radiogroup3"
        android:layout_width="426dp"
        android:layout_height="72dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <RadioButton
            android:id="@+id/insert"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="Insert Statment" />

        <RadioButton
            android:id="@+id/select"
            android:layout_width="162dp"
            android:layout_height="45dp"
            android:text="Select Statment" />

        <RadioButton
            android:id="@+id/alln"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="All" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="387dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Q3-I Want To Add New Person Can You Help Me What I Can Use? "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radiogroup2" />

    <Button
        android:id="@+id/score"
        android:layout_width="178dp"
        android:layout_height="59dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_custom"
        android:text="Score"
        android:textAllCaps="false"
        android:textColor="#E91E63"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radiogroup3" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="361dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="#CA0346"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score" />



</androidx.constraintlayout.widget.ConstraintLayout>