<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".mainGPA"
android:background="@color/ground">

<Button
    android:id="@+id/gpa"
    android:layout_width="135dp"
    android:layout_height="66dp"
    android:layout_marginStart="52dp"
    android:layout_marginTop="96dp"
    android:background="@drawable/button_custom1"
    android:text="GPA"
    android:textSize="24sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView" />

<Button
    android:id="@+id/cgpa"
    android:layout_width="137dp"
    android:layout_height="67dp"
    android:layout_marginTop="96dp"
    android:layout_marginEnd="24dp"
    android:background="@color/button_color"
    android:text="CGPA"
    android:textSize="24sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView" />

<ImageView
    android:id="@+id/imageView"
    android:layout_width="393dp"
    android:layout_height="295dp"
    android:layout_marginTop="36dp"
    android:src="@drawable/gpa"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.615"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView2"
    tools:srcCompat="@drawable/gpa" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="303dp"
    android:layout_height="86dp"
    android:layout_marginTop="24dp"
    android:gravity="center"
    android:text="Welcome \n GPA Calculator"
    android:textColor="#D5542B"
    android:textSize="30sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>