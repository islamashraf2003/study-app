<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CipherActivity"
    android:background="@color/back">


    <TextView
        android:id="@+id/app_title"
        android:layout_width="380dp"
        android:layout_height="71dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="SUBISTITUTION CIPHER"
        android:textColor="#5E508E"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="111dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="44dp"
        android:text="Message:"
        android:textColor="#2843D8"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_title" />

    <EditText
        android:id="@+id/message_input"
        android:layout_width="268dp"
        android:layout_height="53dp"
        android:layout_marginTop="32dp"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_title" />


    <Button
        android:id="@+id/encrypt_button"
        android:layout_width="165dp"
        android:layout_height="83dp"
        android:layout_marginTop="68dp"
        android:layout_weight="1"
        android:text="ENCRYPT"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <Button
        android:id="@+id/decrypt_button"
        android:layout_width="170dp"
        android:layout_height="79dp"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:text="DECRYPT"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/encrypt_button"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="354dp"
        android:layout_height="132dp"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:textColor="#5E508E"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_input" />



</androidx.constraintlayout.widget.ConstraintLayout>