<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textDirection="firstStrongRtl"
    tools:context=".MainActivity"
    android:background="@color/pink1"
    >

  <TableLayout
      android:id="@+id/tableLayout"
      android:layout_width="394dp"
      android:layout_height="403dp"
      android:layout_marginTop="4dp"
      android:background="@color/table"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.47"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView">

    <TableRow
        android:layout_width="wrap_content"
        android:background="@color/purpel">

      <TextView
          android:id="@+id/textView1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="8"
          android:gravity="center_horizontal"
          android:padding="14sp"
          android:text="Semester"
          android:textSize="16sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/textView2"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="8"
          android:gravity="center_horizontal"
          android:padding="14sp"
          android:text="Credit Hours"
          android:textSize="16sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/textView3"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="8"
          android:gravity="center_horizontal"
          android:padding="14sp"
          android:text="Grade"
          android:textSize="16sp"
          android:textStyle="bold" />


    </TableRow>

    <TableRow android:layout_width="wrap_content">

      <TextView
          android:id="@+id/tv1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="8"
          android:text="Semester1"
          android:gravity="center_horizontal"
          android:padding="12sp"
          android:textSize="16sp" />

      <EditText
          android:id="@+id/et1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="8"
          android:gravity="center_horizontal"
          android:inputType="number"
          android:padding="12sp"
          android:textSize="16sp" />

      <EditText
          android:id="@+id/et2"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="8"
          android:gravity="center_horizontal"
          android:inputType="numberDecimal"
          android:padding="12sp"
          android:textSize="16sp" />
    </TableRow>

    <TableRow android:layout_width="wrap_content">

      <TextView
          android:id="@+id/tv2"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="8"
          android:text="Semester2"
          android:gravity="center_horizontal"
          android:padding="12sp"
          android:textSize="16sp" />
      <EditText
          android:id="@+id/et4"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="8"
          android:gravity="center_horizontal"
          android:inputType="number"
          android:padding="12sp"
          android:textSize="16sp" />

      <EditText
          android:id="@+id/et8"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="8"
          android:gravity="center_horizontal"
          android:inputType="numberDecimal"
          android:padding="12sp"
          android:textSize="16sp" />
    </TableRow>

    <TableRow android:layout_width="wrap_content">

      <TextView
          android:id="@+id/tv3"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="8"
          android:text="Semester3"
          android:gravity="center_horizontal"
          android:padding="12sp"
          android:textSize="16sp" />

      <EditText
          android:id="@+id/et6"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="8"
          android:gravity="center_horizontal"
          android:inputType="number"
          android:padding="12sp"
          android:textSize="16sp" />

      <EditText
          android:id="@+id/et5"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="8"
          android:gravity="center_horizontal"
          android:inputType="numberDecimal"
          android:padding="12sp"
          android:textSize="16sp" />
    </TableRow>


  </TableLayout>

  <Button
      android:id="@+id/button6"
      android:layout_width="188dp"
      android:layout_height="80dp"
      android:layout_marginTop="32dp"
      android:layout_marginEnd="8dp"
      android:background="@drawable/custom_button"
      android:text="Add Another Semester"
      android:textAllCaps="false"
      android:textColor="#DC9843E3"
      android:textSize="16sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

  <Button
      android:id="@+id/button"
      android:layout_width="167dp"
      android:layout_height="81dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="32dp"
      android:background="@drawable/custom_button"
      android:text="Calulate CGPA"
      android:textAllCaps="false"

      android:textColor="#DC9843E3"
      android:textSize="16sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

  <TextView
      android:id="@+id/resultTextView"
      android:layout_width="416dp"
      android:layout_height="123dp"
      android:layout_marginBottom="4dp"
      android:background="@color/pink2"
      android:gravity="center"
      android:textColor="#581F61"
      android:textColorLink="#069386"
      android:textSize="16sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/textView"
      android:layout_width="273dp"
      android:layout_height="65dp"
      android:gravity="center"
      android:text="CGPA Calculator"
      android:textColor="#581F61"
      android:textSize="24sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>